@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<BTL_LTWNC.Models.EF.Product>

<link rel="stylesheet" href="./css/home.css" asp-append-version="true" />


<section class="hero__section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <div class="hero__content pt-4">
                    <p class="text-uppercase"> Now taking online orders</p>
                    <h2>Golden Food</h2>
                    <p>
                        Chào mừng đến với Golden Food!

                        Bạn đang tìm kiếm một bữa ăn ngon lành, nhanh chóng và tiện lợi? Hãy để Golden Food giúp bạn! Với menu đa dạng từ các món ăn nhanh hấp dẫn, đồ uống giải khát tươi mát đến những món tráng miệng tuyệt vời, chúng tôi tự tin mang đến cho bạn trải nghiệm ẩm thực tiện lợi ngay tại nhà.

                        Đặt hàng đơn giản chỉ với vài cú nhấp chuột, Golden Food luôn sẵn sàng phục vụ bạn với tốc độ nhanh nhất và chất lượng tốt nhất. Hãy thưởng thức bữa ăn yêu thích của bạn, mọi lúc mọi nơi!
                    </p>

                    <div class="btn buy__btn text-uppercase mt-3">
                        <a href="/shop">Shop now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6">
                <img src="./public/images/Pepperoni_Pizza_NoBackground.png" />
            </div>
        </div>
    </div>
</section>

<section class="trending__products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Trending Products</h2>
            </div>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("~/Views/Shared/_ProductPartialView.cshtml", item)
            }
        </div>
    </div>
</section>

<section class="best_sales">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Best sales</h2>
            </div>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("~/Views/Shared/_ProductPartialView.cshtml", item)
            }
        </div>
    </div>
</section>



